@using NoteUI.Models
@model SaveNewNumberModel

@{
    ViewData["Title"] = "New Number";
}

<br />

<div class="row">

    <div class="container">

        <h2>Create</h2>
        @using (Html.BeginForm("SubmitNewNumber", "Number", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.status, "status")
                @Html.TextBoxFor(model => model.status, new { @class = "form-control", placeholder = "status value" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.numberValue, "status")
                @Html.TextBoxFor(model => model.numberValue, new { @class = "form-control", placeholder = "number value" })
            </div>

            <div class=form-group>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }

    </div>

</div>